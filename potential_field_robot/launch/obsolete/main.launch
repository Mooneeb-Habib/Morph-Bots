<launch>
  <param name="/use_sim_time" value="true" />

  <!-- start world -->
  <node name="gazebo" pkg="gazebo_ros" type="gazebo" 
   args="$(find potential_field_robot)/worlds/your.world" respawn="false" output="screen" />

  <!-- start gui >
  <node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen"/-->

  <!-- include our robots -->
  <include file="$(find potential_field_robot)/launch/robots.launch"/>
</launch>
